
<div class="main-topic">

  <%= link_to articles_path(topic_search: topic.name) do %>
    <div class='main-topic-image' style='background-image: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.2) 90%), url(<%= image_path topic.image_url %>)' >
      <h1><%= topic.name %></h1>
    </div>
  <%end%>


  <div class="panel main-topic-legend">
    <div class="panel-body">
      <p class= "font-header-app"><%= topic.number_sources %> Sources</p>
          <%= link_to "DÃ©couvrir le sujet", articles_path(topic_search: topic.name), class: "btn btn-bordered btn-bordered-primary"%>
        </p>
      <div class="logo-source">
          <% JSON.parse(topic.sources_json)["sources"].each do |source| %>
            <%= image_tag "logo/logos_custom/#{source}-logo-black.png", width: "100px", class: "logo-main-card" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
