
<div class="topic-card">
<%= link_to articles_path(topic_search: topic.name), target: '_blank' do %>
  <div class="topic-card-image" style="background-image: url(<%= image_path topic.image_url %>)" >
    <h1><%= topic.name %></h1>
  </div>
<%end%>

  <div class="panel">
    <div class="panel-body">
      <div class="topic-card-legend">
        <p class= "font-header-app"><%= topic.number_sources %></p>
        <div>
          <% topic.logos.split(" ").each do |logo| %>
            <%= image_tag logo, width: '60px' %>
          <% end %>
        </div>
        <p class="presentation"><%= topic.presentation %></p>
      </div>
    </div>
  </div>
</div>

