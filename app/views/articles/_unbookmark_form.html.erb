<%= form_tag bookmark_path, method: :delete, remote: true, id: 'article' do %>
  <div class='unbookmark-parent'>
    <% if local_assigns[:story] %>
      <%= hidden_field_tag "article[aylien_id]", story.id %>
    <% else %>
      <%= hidden_field_tag "article[aylien_id]", article.aylien_id %>
    <% end %>
    <%= button_tag '', class:'bookmark' do %>
      <%= image_tag 'icone/bookmark_full.png' %>
    <% end %>
  </div>
<% end %>
