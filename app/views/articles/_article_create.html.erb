<% if local_assigns[:story] %>
  <%= hidden_field_tag "article[source_id]", Source.where(aylien_id: story.source.id.to_i).first.id %>
  <%= hidden_field_tag "article[title]", story.title %>
  <% unless story.media[0].nil? %>
    <%= hidden_field_tag "article[pic_url]", story.media[0].url %>
  <% end %>
  <%= hidden_field_tag "journalist[aylien_id]", story.author.id %>
  <%= hidden_field_tag "journalist[last_name]", story.author.name %>
  <%= hidden_field_tag "article[date]", story.published_at %>
  <%= hidden_field_tag "article[abstract]", story.summary.sentences.join("\n") %>
  <%= hidden_field_tag "article[words_count]", story.words_count %>
  <%= hidden_field_tag "article[aylien_id]", story.id %>
  <%= hidden_field_tag "article[source_url]", story.links.permalink %>
  <%= hidden_field_tag "article[opposite_url]", story_opposite_url(story, @hash_source_url) %>
<% else %>
  <%= hidden_field_tag "article[source_id]", article.source_id %>
  <%= hidden_field_tag "article[title]", article.title %>
  <% unless article.pic_url.nil? %>
    <%= hidden_field_tag "article[pic_url]", article.pic_url %>
  <% end %>
  <%= hidden_field_tag "journalist[aylien_id]", article.journalist.aylien_id %>
  <%= hidden_field_tag "journalist[last_name]", article.journalist.last_name %>
  <%= hidden_field_tag "article[date]", article.date %>
  <%= hidden_field_tag "article[abstract]", article.abstract %>
  <%= hidden_field_tag "article[words_count]", article.words_count %>
  <%= hidden_field_tag "article[aylien_id]", article.aylien_id %>
  <%= hidden_field_tag "article[source_url]", article.source_url %>
  <%= hidden_field_tag "article[opposite_url]", article.opposite_url %>
<% end %>
