<%= form_tag bookmark_path, method: :post, remote: true, id: 'article' do %>
  <div class='bookmark-parent'>
    <% if local_assigns[:story] %>
      <%= hidden_field_tag "article[aylien_id]", story.aylien_id %>
    <% else %>
      <%= hidden_field_tag "article[aylien_id]", article.aylien_id %>
    <% end %>
    <%= button_tag '', class: 'bookmark icon button-tag button-tag-bookmark' do %>
      <%= image_tag 'icone/bookmark_empty_blue.png' %>
    <% end %>
  </div>
<% end %>
